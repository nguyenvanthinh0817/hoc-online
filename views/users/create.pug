extends ../layouts/common

block content
	h1 Create user

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action='/users/create', method='POST', enctype="multipart/form-data")
		//- input(type="hidden", name="_csrf", value=csrfToken)
		.form-group
			label(for="name") Name
			input(type='text', name='name',id="name", class="form-control mb-3", value=values ? values.name : '')
		.form-group
			label(for="phone") Phone
			input(type='text', name='phone',id="phone", class="form-control mb-3", value=values ? values.phone : '')
		.form-group
			label(for="avatar") Avatar
			input(type='file', name='avatar',id="avatar", class="mb-3 form-control-file")

		button.btn.btn-success Create
