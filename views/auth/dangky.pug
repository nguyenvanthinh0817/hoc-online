extends ../layouts/common

block content
    .d-flex.justify-content-center.mb-4
        .card.col-md-6.p-0
            .card-header.d-flex.justify-content-center
                h3 Đăng ký
            .card-body
                if errors
                    each error in errors
                        .alert.alert-danger= error
                form(action='/auth/dangky', method='POST')
                        .form-group
                            label(for='validationDefault01') Họ và tên
                            input.form-control(type='text', name='name', required='', value=values ? value=values.name : '')
                            label(for='validationDefault01') Email
                            input.form-control(type='text', name='email', required='', value=values ? value=values.email : '')
                            label(for='validationDefault01') Mật khẩu
                            input.form-control(type='password', name='password', required='', value=values ? value=values.password : '')
                            label(for='validationDefault01') Nhập lại mật khẩu
                            input.form-control(type='password', name='rePassword', required='', value=values ? value=values.rePassword : '')
                            .d-flex.justify-content-center
                                button.btn.btn-success.mt-2(type='submit') Đăng ký
                            p Đã có tài khoản? 
                                a(href='/auth/login') Đăng nhập